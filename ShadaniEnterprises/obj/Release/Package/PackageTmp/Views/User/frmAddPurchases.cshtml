        $("body").on("click", "#btnAdd", function () {
            //Auto Generated Text Boxes
            var ProductsToPurchase = $("#ProductsToPurchase");
            var prodPackSize = $("#prodPackSize");
            var AcUnit = $("#AcUnit");
            var prodQty = $("#prodQty");
            var prodBatch = $("#prodBatch");
            var prodMFG = $("#prodMFG");
            var prodEXP = $("#prodEXP");
            var purchaseRate = $("#purchaseRate");
            var amount = $("#amount");

            //Get the reference of the Table's TBODY element.
            var tBody = $("#tblPurchases > TBODY")[0];

            //Add Row.
            var row = tBody.insertRow(-1);

            // Auto Generated Cells Added.
            var cell = $(row.insertCell(-1));
            cell.html(ProductsToPurchase.val());

            cell = $(row.insertCell(-1));
            cell.html(prodPackSize.val());

            cell = $(row.insertCell(-1));
            cell.html(AcUnit.val());

            //Add GenericName cell.
            cell = $(row.insertCell(-1));
            cell.html(prodQty.val());

            cell = $(row.insertCell(-1));
            cell.html(prodBatch.val());

            cell = $(row.insertCell(-1));
            cell.html(prodMFG.val());
            //Brand Name cell.
            cell = $(row.insertCell(-1));
            cell.html(prodEXP.val());
            //Prod Strength cell.
            cell = $(row.insertCell(-1));
            cell.html(purchaseRate.val());

            cell = $(row.insertCell(-1));
            cell.html(amount.val());
            //Add Button cell.

            cell = $(row.insertCell(-1));
            var btnRemove = $("<input />");
            btnRemove.attr("type", "button");
            btnRemove.attr("class", "btn btn-danger btn-simple btn-xs");
            btnRemove.attr("onclick", "Remove(this);");
            btnRemove.val("Remove");
            cell.append(btnRemove);

            //Clear the TextBoxes.
            ProductsToPurchase.val("");
            prodPackSize.val("");
            AcUnit.val("");
            prodQty.val("");
            prodBatch.val("");
            prodMFG.val("");
            prodEXP.val("");
            purchaseRate.val("");
            amount.val("");
        });

        function Remove(button) {
            //Determine the reference of the Row using the Button.
            var row = $(button).closest("TR");
            var name = $("TD", row).eq(0).html();
            if (confirm("Do you want to delete Item Code: " + name)) {
                //Get the reference of the Table.
                var table = $("#tblPurchases")[0];

                //Delete the Table row using it's Index.
                table.deleteRow(row[0].rowIndex);
            }
        };

        function Cancel(button) {

            if (confirm("Do you want to delete whole table?: ")) {
                //Get the reference of the Table.
                //var table = $("#tblFinancialOffer")[0];
                var table = document.getElementById("tblPurchases");
                //or use :  var table = document.all.tableid;
                for (var i = table.rows.length - 1; i > 0; i--) {
                    table.deleteRow(i);
                }
            };
        };

        $("body").on("click", "#sendServer", function () {
            //Loop through the Table rows and build a JSON array.
            
            var InvoiceDate = $("#InvoiceDate");
            var InvoiceNum = $("#InvoiceNum");
            var customers = [];
            //document.getElementById(rowId).childNodes[5].value;
            $("#tblPurchases TBODY TR").each(function () {
                var row = $(this);
                var customer = {};
                customer.Ref = $("#RefSelect").val();
                customer.InvoiceDate = $("#InvoiceDate").val();
                customer.InvoiceNum = $("#InvoiceNum").val();
                customer.Company = $("#CompanySelect1").val();
                customer.ProductName = row.find("td").eq(0).html();
                customer.PackVal = row.find("td").eq(1).html();
                customer.AcUnit = row.find("td").eq(2).html();
                customer.prodQty = row.find("td").eq(3).html();
                customer.prodBatch = row.find("td").eq(4).html();
                customer.prodMFG = row.find("td").eq(5).html();
                customer.prodEXP = row.find("td").eq(6).html();
                customer.purchaseRate = row.find("td").eq(7).html();
                customer.amount = row.find("td").eq(8).html();
                
                customers.push(customer);

            });
            console.log(JSON.stringify(customers));
            //Send the JSON array to Controller using AJAX.
            $.ajax({
                type: "POST",
                url: "/User/SavePurchases",
                data: JSON.stringify(customers),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    alert(r + " record(s) inserted.");
                    window.location.href =  '@Url.Action("PurchasesView", "User")'
                }
            });
        });
    </script>
