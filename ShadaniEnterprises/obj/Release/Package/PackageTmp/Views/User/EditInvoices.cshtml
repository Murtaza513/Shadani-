                else {

                    document.getElementById('edit').style.display = 'none';
                    document.getElementById('addNew').style.display = 'block';
                    document.getElementById('Button1').innerText = 'Cancel';
                }
            }
        }

        $(document).on("keyup", ".bank_table input", function () {
            $(this).trigger("recalc");
        });


        $(document).on("recalc", ".bank_table tr", function () {
            var total = +$(this).find(".prodQuantity").val() * +$(this).find(".prodRate").val();
            $(this).find(".prodValue").val(total.toFixed(2));
        });

        $(document).on("recalc", ".bank_table", function () {
            var grandTotal = 0;
            $(this).find(".prodValue").each(function () {
                grandTotal += +$(this).val();
            });
            $("#grandTotal").text(grandTotal.toFixed(2));
        });

        $(".bank_table").trigger("recalc");

        $(function () {

            AjaxCall('/User/GetPurchaseOrderRef', null).done(function (response) {
                if (response.length > 0) {
                    $('#ReferenceSelect').html('');
                    var options = '';
                    options += '<option value="Select">Select</option>';
                    for (var i = 0; i < response.length; i++) {
                        options += '<option value="' + response[i] + '">' + response[i] + '</option>';
                    }
                    $('#ReferenceSelect').append(options);

                }
            }).fail(function (error) {
                alert(error.StatusText);
                });

            $('#ReferenceSelect').on("change", function () {
                var country = $('#ReferenceSelect').val();
                var obj = { Company: country };
                $.ajax({
                    url: "/User/GetInvoiceDataBasedOnRef",
                    method: "POST",
                    data: obj,
                    success: function (response) {
                        console.log(response);
                        if (response.length > 0) {
                            $('#Prods').html('');
                            var options = '';
                            options += '<option value="Select">Select</option>';
                            for (var i = 0; i < response.length; i++) {
                                options += '<option value="' + response[i] + '">' + response[i] + '</option>';
                            }
                            $('#Prods').append(options);

                        }
                    }
                })
            });

            $('#Prods').on("change", function () {
                var Product = $('#Prods').val();
                var Ref = $('#ReferenceSelect').val();
                var obj = { ProductName: Product, Ref: Ref };
                $.ajax({
                    url: "/User/GetProdDetailsForInvoice",
                    method: "POST",
                    data: obj,
                    success: function (response) {
                        console.log(response);
                        if (response.length > 0) {
                            $("#PackSize").val(response[0]);
                            $("#ProdRegNumber").val(response[1]);
                            $("#prodAcUnit").val(response[2]);
                            $("#prodQuaty").val(response[3]);
                            $("#prodBatchNum").val(response[4]);
                            $("#prodMfgDate").val(response[5]);
                            $("#prodExpDate").val(response[6]);
                            $("#Rate").val(response[7]);
                            $("#prodAmountVal").val(response[8]);
                        }
                    }
                })
            });

        });
        
        function AjaxCall(url, data, type) {
            return $.ajax({
                url: url,
                type: type ? type : 'GET',
                data: data,
                contentType: 'application/json'
            });
        }

        $(document).on("click", "button[name=RemoveProd]", function () {
            
            var removeProd = $(this).val()
            var obj = {ProductName: removeProd};
            $.ajax({
                url: "/User/DeleteProductFromTableInvoiceDC",
                method: "POST",
                data: obj,
                success: function (response) {
                    alert('Product Removed Successfully');
                    window.location.reload(true);
                },
                fail: function (response) {
                    alert('Error Product not deleted see inner exception');
                }

            });
        });

        $("#prodQuaty,#Rate").keyup(function () {
            var prodValueCal = ($('#prodQuaty').val() * $('#Rate').val());
            $('#prodAmountVal').val(prodValueCal.toFixed(2));
