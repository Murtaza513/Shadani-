    <script type="text/javascript">


        $(function () {

            AjaxCall('/User/GetAllRef', null).done(function (response) {
                if (response.length > 0) {
                    $('#RefSelect').html('');
                    var options = '';
                    options += '<option value="Select">Select</option>';
                    for (var i = 0; i < response.length; i++) {
                        options += '<option value="' + response[i] + '">' + response[i] + '</option>';
                    }
                    $('#RefSelect').append(options);

                }
            }).fail(function (error) {
                alert(error.StatusText);
            });

            AjaxCall('/User/GetAllCustomers', null).done(function (response) {
                if (response.length > 0) {
                    $('#CustomerSelect').html('');
                    var options = '';
                    options += '<option value="Select">Select</option>';
                    for (var i = 0; i < response.length; i++) {
                        options += '<option value="' + response[i] + '">' + response[i] + '</option>';
                    }
                    $('#CustomerSelect').append(options);

                }
            }).fail(function (error) {
                alert(error.StatusText);
                });

            $('#RefSelect').on("change", function () {
                var country = $('#RefSelect').val();
                var obj = { Company: country };
                $.ajax({
                    url: "/User/GetDeliveryChallanDetails",
                    method: "POST",
                    data: obj,
                    success: function (response) {
                        if (response.length > 0) {
                            $("#OrderDate").val(response[0]);
                            $("#DcNum").val(response[1]);
                         
                        }
                    }
                })
            });

            $('#RefSelect').on("change", function () {
                var country = $('#RefSelect').val();
                var obj = { Company: country };
                $.ajax({
                    url: "/User/GetDeliveryDataBasedOnRef",
                    method: "POST",
                    data: obj,
                    success: function (response) {
                        console.log(response);
                        if (response.length > 0) {
                            $('#ProductsToPurchase').html('');
                            var options = '';
                            options += '<option value="Select">Select</option>';
                            for (var i = 0; i < response.length; i++) {
                                options += '<option value="' + response[i] + '">' + response[i] + '</option>';
                            }
                            $('#ProductsToPurchase').append(options);

                        }
                    }
                })
            });

            $('#ProductsToPurchase').on("change", function () {
                var Product = $('#ProductsToPurchase').val();
                var Ref = $('#RefSelect').val();
                var obj = { ProductName: Product, Ref: Ref };
                $.ajax({
                    url: "/User/GetProdDetailsForDelivery",
                    method: "POST",
                    data: obj,
                    success: function (response) {
                        console.log(response);
                        if (response.length > 0) {
                            $("#prodPackSize").val(response[0]);
                            $("#AcUnit").val(response[1]);
                            $("#prodQuantity").val(response[2]);
                            $("#prodBatchNumber").val(response[3]);
                            $("#MfgDate").val(response[4]);
                            $("#ExpDate").val(response[5]);
                            $("#TenderCode").val(response[6]);
                            $("#ProdRegNum").val(response[7]);
                        }
                    }
                })
            });

        });

        function AjaxCall(url, data, type) {
            return $.ajax({
                url: url,
                type: type ? type : 'GET',
                data: data,
                contentType: 'application/json'
            });
        }

        $("body").on("click", "#btnAdd", function () {
            //Auto Generated Text Boxes
            var TenderCode = $("#TenderCode");
            var ProdRegNum = $("#ProdRegNum");
            var ProductsToPurchase = $("#ProductsToPurchase");
            var prodPackSize = $("#prodPackSize");
            var AcUnit = $("#AcUnit");
            //Reference the Name and Country TextBoxes.
            var prodQuantity = $("#prodQuantity");
            var prodBatchNumber = $("#prodBatchNumber");
            var MfgDate = $("#MfgDate");
            var ExpDate = $("#ExpDate");
          


            //Get the reference of the Table's TBODY element.
            var tBody = $("#tblDc > TBODY")[0];

            //Add Row.
            var row = tBody.insertRow(-1);

            // Auto Generated Cells Added.
            var cell = $(row.insertCell(-1));
            cell.html(TenderCode.val());

            cell = $(row.insertCell(-1));
            cell.html(ProdRegNum.val());

            cell = $(row.insertCell(-1));
            cell.html(ProductsToPurchase.val());

            //Add GenericName cell.
            cell = $(row.insertCell(-1));
            cell.html(prodPackSize.val());

            //Brand Name cell.
            cell = $(row.insertCell(-1));
            cell.html(AcUnit.val());
            //Prod Strength cell.
            cell = $(row.insertCell(-1));
            cell.html(prodQuantity.val());

            cell = $(row.insertCell(-1));
            cell.html(prodBatchNumber.val());

            cell = $(row.insertCell(-1));
            cell.html(MfgDate.val());

            cell = $(row.insertCell(-1));
            cell.html(ExpDate.val());
            
            //Add Button cell.

            cell = $(row.insertCell(-1));
            var btnRemove = $("<input />");
            btnRemove.attr("type", "button");
            btnRemove.attr("class", "btn btn-danger btn-simple btn-xs");
            btnRemove.attr("onclick", "Remove(this);");
            btnRemove.val("Remove");
            cell.append(btnRemove);

            //Clear the TextBoxes.
            TenderCode.val("");
            ProdRegNum.val("");
            ProductsToPurchase.val("");
            prodPackSize.val("");
            AcUnit.val("");
            prodQuantity.val("");
            prodBatchNumber.val("");
            MfgDate.val("");
            ExpDate.val("");
           



        });

        function Remove(button) {
            //Determine the reference of the Row using the Button.
            var row = $(button).closest("TR");
            var name = $("TD", row).eq(0).html();
            if (confirm("Do you want to delete Item Code: " + name)) {
                //Get the reference of the Table.
                var table = $("#tblDc")[0];

                //Delete the Table row using it's Index.
                table.deleteRow(row[0].rowIndex);
            }
        };

        function Cancel(button) {

            if (confirm("Do you want to delete whole table?: ")) {
                //Get the reference of the Table.
                //var table = $("#tblFinancialOffer")[0];
                var table = document.getElementById("tblDc");
                //or use :  var table = document.all.tableid;
                for (var i = table.rows.length - 1; i > 0; i--) {
                    table.deleteRow(i);
                }
            };
        };

        $("body").on("click", "#sendServer", function () {
            //Loop through the Table rows and build a JSON array.
            var customers = new Array();
            $("#tblDc TBODY TR").each(function () {
                var row = $(this);
                var customer = {};

                customer.Ref = $("#RefSelect").val();
                customer.OrderDate = $("#OrderDate").val();
                customer.DcNum = $("#DcNum").val();
                customer.CustomerName = $("#CustomerSelect").val();
                customer.DcDate = $("#DcDate").val();
                customer.DcType = $("#DcType").val();
                customer.Warranty = $("#Warranty").val();
                customer.TenderCode = row.find("td").eq(0).html();
                customer.ProdRegNum = row.find("td").eq(1).html();
                customer.ProductName = row.find("td").eq(2).html();
                customer.PackVal = row.find("td").eq(3).html();
                customer.AcUnit = row.find("td").eq(4).html();
                customer.prodQty = row.find("td").eq(5).html();
                customer.prodBatch = row.find("td").eq(6).html();
                customer.prodMFG = row.find("td").eq(7).html();
                customer.prodEXP = row.find("td").eq(8).html();

                customers.push(customer);
            });

            //Send the JSON array to Controller using AJAX.
            $.ajax({
                type: "POST",
                url: "/User/SaveDeliveryChallan",
                data: JSON.stringify(customers),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    alert(r + " record(s) inserted.");
                    window.location.href =  '@Url.Action("DeliveryChallanView", "User")'
                }
            });
        });

        $(document).ready(function () {
            var now = new Date();

            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);

            var today = now.getFullYear() + "-" + (month) + "-" + (day);


            $('#DcDate').val(today);
        });
    </script>
</body>
