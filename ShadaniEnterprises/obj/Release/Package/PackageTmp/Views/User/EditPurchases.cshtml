            })
        });

        $('#Prods').on("change", function () {
            var Product = $('#Prods').val();
            var Ref = $('#Reference').val();
            var obj = { ProductName: Product, Ref: Ref };
            $.ajax({
                url: "/User/GetProdDetailsBasedOnCompany",
                method: "POST",
                data: obj,
                success: function (response) {
                    console.log(response);
                    if (response.length > 0) {
                        $("#prodPack").val(response[0]);
                        $("#prodQuaty").val(response[1]);
                        $("#ProdpurchaseRate").val(response[2]);
                        $("#Prodamount").val(response[3]);
