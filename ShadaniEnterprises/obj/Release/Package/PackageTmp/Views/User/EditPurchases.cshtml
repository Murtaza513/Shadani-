        $(document).on("recalc", ".bank_table tr", function () {
            var total = +$(this).find(".prodQty").val() * +$(this).find(".purchaseRate").val();
            $(this).find(".amount").val(total.toFixed(2));
        });

        $(document).on("recalc", ".bank_table", function () {
            var grandTotal = 0;
            $(this).find(".amount").each(function () {
                grandTotal += +$(this).val();
            });
            $("#grandTotal").text(grandTotal.toFixed(2));
        });

        $(".bank_table").trigger("recalc");
        $(function () {

        $(function () {
            var country = $('#Reference').val();
            var obj = { Company: country };
            $.ajax({
                url: "/User/GetDataBasedOnRef",
                method: "POST",
                data: obj,
                success: function (response) {
                    console.log(response);
                    if (response.length > 0) {
                        $('#Comp').html('');
                        var options = '';
                        options += '<option value="Select">Select</option>';
                        for (var i = 0; i < response.length; i++) {
