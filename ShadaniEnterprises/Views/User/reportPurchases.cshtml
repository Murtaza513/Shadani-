                <input type="month" name="searchDateMonth" id="searchDateMonth" onchange="mydate1();" class="form-control" hidden>
                <input type="week" name="searchDateWeek" id="searchDateWeek" onchange="mydate1();" class="form-control" hidden>
                <input type="date" name="searchDateDaily" id="searchDateDaily" onchange="mydate1();" class="form-control" hidden>

            </div>*@
