            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-outline-primary">
                        <div class="card-header">
                            <h4 class="m-b-0 text-white">Report Purchases (Summary)</h4>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("reportPurchases", "User", FormMethod.Post))
                            {
                                <form action="#">
                                    <div class="form-body">
                                        <h3 class="box-title m-t-40">Details</h3>
                                        <hr>

                                        
                            
                                        <div class="row">
                                            <div class="col-md-12 ">
                                                <div class="form-group">
                                                    <label>Report By</label>
                                                    <select class="form-control custom-select" name="option" id="option">
                                                        <option>Select</option>
                                                        <option value="custom date">Custom Date</option>
                                                        <option value="fiscal year">Fiscal Year</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <input type="text" name="reportOf" id="reportOf" value="Purchase Summary Report" hidden />
                                            <input type="text" name="totalRupees" id="totalRupees" value="00.00" hidden />

                                            <div class="row" id="datesRow" hidden>
                                                <div class="col-md-6 ">
                                                    <div class="form-group">
                                                        <label>From Date</label>
                                                        <input type="date" name="fromDate" id="fromDate" class="form-control" hidden>
                                                        <input type="text" name="fromDateFiscal" id="fromDateFiscal" class="form-control" hidden>

                                                    </div>
                                                </div>
                                                <div class="col-md-6 ">
                                                    <div class="form-group">
                                                        <label>To Date</label>
                                                        <input type="date" name="toDate" id="toDate" class="form-control" hidden>
                                                        <input type="text" name="toDateFiscal" id="toDateFiscal" class="form-control" hidden>

                                                    </div>
                                                </div>

                                            </div>
