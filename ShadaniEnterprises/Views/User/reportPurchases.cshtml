                                                    <div class="form-group">
                                                        <label>Output Format</label>
                                                        <select class="form-control custom-select" name="outputFormat" id="outputFormat">
                                                            <option>Select</option>
                                                            <option value="excel">Excel</option>
                                                            <option value="pdf">Pdf</option>
                                                        </select>
                                                    </div>
                                                </div>
